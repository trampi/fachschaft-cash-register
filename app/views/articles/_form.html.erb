<% if @article.errors.any? then %>
    <div class="alert alert-danger">
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for @article, html: {class: "form-horizontal"} do |f| %>
    <div class="form-group">
      <%= f.label :name, "Name *", class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :barcode, "Barcode *", class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :barcode, placeholder: "Barcode", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :stock, "Stock *", class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :stock, placeholder: "Stock", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :price, "Price *", class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :price, placeholder: "Price", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :package_size, "Package size *", class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :package_size, placeholder: "Package size", class: "form-control" %>
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit "Save", class: "btn btn-primary" %>
        <%= link_to "Cancel", :back, class: "btn btn-default" %>
      </div>
    </div>
<% end %>
